<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bacon.secretsanta.MainActivity">

    <EditText
        android:id="@+id/name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/name_editText"
        android:inputType="textPersonName" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email_editText"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/addPlayer_button"
        android:layout_alignTop="@+id/phone_editText">

        <RadioButton
            android:id="@+id/phone_radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/phone_radioButton" />

        <RadioButton
            android:id="@+id/email_radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/email_radioButton"
            android:textAlignment="textStart" />

    </RadioGroup>

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone_editText"
        android:ems="10"
        android:hint="@string/email_editText"
        android:inputType="textEmailAddress"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/addPlayer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/addPlayer_button" />

    <EditText
        android:id="@+id/phone_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contact_textView"
        android:ems="10"
        android:hint="@string/phone_editText"
        android:inputType="phone"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/contact_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_editText"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="none"
        android:text="@string/contact_textView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/output_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showPlayers_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email_editText"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/showPlayers_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addPlayer_button"
        android:layout_alignParentEnd="true"
        android:text="@string/showPlayers_button" />

    <Button
        android:id="@+id/updatePlayer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/addPlayer_button"
        android:text="@string/updatePlayer_button" />

    <Button
        android:id="@+id/secretSanta_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/output_textView"
        android:text="@string/secretSanta_button" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/secretSanta_button"
        android:text="@string/delete_button" />

</RelativeLayout>
